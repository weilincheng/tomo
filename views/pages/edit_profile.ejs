<div class="row justify-content-center vh-75 w-100 pt-3">
  <div class="col-1 px-0 mx-0"><%- include("../partials/sidebar") -%></div>
  <div class="col-4 d-flex justify-content-center h-100 my-2">
    <form class="w-75 h-100" enctype="multipart/form-data" id="profile-form">
      <div class="mb-3">
        <div class="d-flex flex-column">
          <label for="profile-image" class="form-label fw-bold"
            >Profile Image</label
          >
          <img class="w-50" id="profile-image-source" src="" alt="" />
        </div>
        <input
          type="file"
          class="col-auto form-control"
          id="profile-image"
          name="profile-image"
          accept="image/*"
        />
      </div>
      <div class="mb-3">
        <div class="d-flex flex-column">
          <label for="background-image" class="form-label fw-bold"
            >Background Image</label
          >
          <img class="w-50" id="background-image-source" src="" alt="" />
        </div>
        <input
          type="file"
          class="col-auto form-control"
          id="background-image"
          name="background-image"
          accept="image/*"
        />
      </div>
      <div class="mb-3">
        <label for="nickname" class="form-label fw-bold">Nickname</label>
        <input
          type="text"
          class="col-auto form-control"
          id="nickname"
          name="nickname"
          maxlength="50"
        />
      </div>
      <div class="text-end" id="nickname-count">
        <span id="nickname-current">0</span>
        <span id="maximum">/ 50</span>
      </div>
      <div class="mb-3">
        <label for="Geo Location" class="form-label fw-bold"
          >Geo Location</label
        >
        <div class="input-group flex-nowrap mb-1">
          <span class="input-group-text">Lat</span>
          <input
            type="text"
            class="form-control"
            id="geo-location-lat"
            name="geo-location-lat"
            maxlength="30"
            readonly
          />
          <span class="input-group-text">Lng</span>
          <input
            type="text"
            class="form-control"
            id="geo-location-lng"
            name="geo-location-lng"
            maxlength="30"
            readonly
          />
        </div>
        <div class="form-check form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            id="display-geo-location"
            name="display-geo-location"
            checked
          />
          <label
            class="form-check-label"
            for="display-geo-location"
            id="display-geo-location-label"
            >Display Geo Location on Map</label
          >
        </div>
      </div>
      <div class="mb-3">
        <div class="row">
          <div class="col-6">
            <label for="birthdate" class="form-label fw-bold">Birth Date</label>
            <input
