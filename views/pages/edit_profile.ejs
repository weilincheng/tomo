      <div class="mb-3">
        <label for="bio" class="form-label fw-bold">Bio</label>
        <textarea
          type="text"
          class="form-control"
          id="bio"
          name="bio"
          rows="2"
          maxlength="160"
        ></textarea>
      </div>
      <div class="text-end" id="bio-count">
        <span id="bio-current">0</span>
        <span id="maximum">/ 160</span>
      </div>
      <div class="mb-3 pb-3 border-bottom">
        <label for="website" class="form-label fw-bold">Website</label>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">http://</span>
          <input
            type="text"
            class="form-control"
            id="website"
            name="website"
            maxlength="100"
          />
        </div>
        <div class="text-end" id="website-count">
          <span id="website-current">0</span>
          <span id="maximum">/ 100</span>
