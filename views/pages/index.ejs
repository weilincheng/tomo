<%- include("../partials/header") -%>

<div class="row justify-content-center h-75 w-100 mt-2">
  <div class="col-1"><%- include("../partials/sidebar") -%></div>
  <div class="col-8 d-flex justify-content-center h-100 mt-3">
    <div class="h-100 w-100" id="map"></div>
  </div>
  <div
    id="right-col"
    class="col-3 d-flex flex-column justify-content-start overflow-auto mt-3"
  >
    <div
      id="signin-signup-form"
      class="d-flex flex-column justify-content-between h-100"
    >
      <div class="d-grid gap-2 col-8 mx-auto">
        <p class="fs-1">Join Today</p>
        <button
          id="signup"
          class="btn btn-outline-primary text-nowrap rounded-pill"
          type="button"
        >
          Sign Up With Email
        </button>
      </div>
      <div class="d-grid gap-2 col-8 mx-auto">
        <p class="fs-6">Already have an account?</p>
        <button
          id="signin"
          class="btn btn-primary text-nowrap rounded-pill"
          type="button"
        >
          Sign In
        </button>
      </div>
    </div>
  </div>
</div>
<script src="../../static/js/user_card.js"></script>
<script
  id="map-script"
  type="module"
  src="../../static/js/index.js"
  google_api_key="<%= google_api_key%>"
  socket_host="<%= socket_host%>"
></script>
<script src="/socket.io/socket.io.js"></script>
<%- include("../partials/footer") -%>
