<%- include("../partials/header") -%>
<div class="row h-100 w-100 pt-3">
  <div class="col-1 h-100 mx-0 px-0">
    <%- include("../partials/sidebar") -%>
  </div>
  <div class="col-8 h-100 d-flex flex-column justify-content-between pb-5">
    <div id="messages-session" class="w-100 overflow-auto">
      <p class="fs-3 fw-bold text-center">Select a message</p>
    </div>
    <div class="row w-100">
      <div class="col-11 d-flex justify-content-center align-items-center">
        <input
          class="form-control"
          id="message-content-input"
          autocomplete="off"
        />
      </div>
      <div class="col-1 d-flex justify-content-center align-items-center">
        <button id="send-message-button" class="btn btn-primary">Send</button>
      </div>
    </div>
  </div>
  <div class="col-3 h-100 border border-light">
    <p class="fs-4 fw-semibold text-center">Messages</p>
    <div id="user-messages-session" class="w-100 overflow-auto"></div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script
  id="message-script"
  src="../../static/js/messages.js"
  socket_host="<%= socket_host%>"
></script>
<%- include("../partials/footer") -%>
