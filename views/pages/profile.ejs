<%- include("../partials/header") -%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script
  src="../../static/js/profile.js"
  id="profile-script"
  userId="<%= userId%>"
></script>
<div class="row w-100">
  <div class="col-1"><%- include("../partials/sidebar") -%></div>
  <div class="col-8 d-flex justify-content-center">
    <div class="w-100 h-100 d-flex flex-column">
      <div
        class="rounded-top text-white d-flex flex-row"
        style="background-color: lightblue; height: 210px"
      >
        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px">
          <img
            src="https://via.placeholder.com/150"
            alt="Generic placeholder image"
            class="img-fluid img-thumbnail rounded-circle mt-4 mb-2"
            style="width: 150px; z-index: 1"
          />
          <button
            type="button"
            class="btn btn-outline-dark"
            data-mdb-ripple-color="dark"
            style="z-index: 1"
          >
            Edit profile
          </button>
        </div>
        <div class="ms-3" style="margin-top: 80px">
          <p class="fs-4" id="name"></p>
          <p class="fs-6" id="location"></p>
          <a class="fs-6" id="website" href=""></a>
        </div>
      </div>
      <div class="p-4 text-black" style="background-color: #f8f9fa">
        <div class="d-flex justify-content-end text-center py-1">
          <div id="followers-link" class="btn px-3 d-flex text-center">
            <p id="followers-count" class="mx-1 fs-6"></p>
            <p class="text-secondary">Followers</p>
          </div>
          <div id="following-link" class="btn px-3 d-flex text-center">
            <p id="following-count" class="mx-1 fs-6"></p>
            <p class="text-secondary">Following</p>
          </div>
        </div>
      </div>
      <div id="posts-section"></div>
    </div>
  </div>
  <div id="follow-list-section" class="col-3 invisible">
    <div
      id="follow-list-title"
      class="border-bottom text-center fs-3 mb-1"
    ></div>
    <div id="follow-list-details" class="d-flex flex-column"></div>
  </div>
</div>
<%- include("../partials/footer") -%>
