<%- include('../partials/header'); %>
<form class="signup-form">
  <div class="form-floating mb-3 w-50 mx-auto">
    <input
      type="name"
      id="name"
      name="name"
      class="form-control"
      placeholder="Name"
      required
    />
    <label for="name">Name</label>
  </div>
  <div class="form-floating mb-3 w-50 mx-auto">
    <input
      type="email"
      id="email"
      name="email"
      class="form-control"
      placeholder="Email address"
      required
    />
    <label for="email">Email address</label>
    <div id="emailHelp" class="form-text">
      We'll never share your email with anyone else.
    </div>
  </div>
  <div class="sign-in-form form-floating mb-3 w-50 mx-auto">
    <input
      type="password"
      id="password"
      name="password"
      class="form-control"
      placeholder="Password"
      required
    />
    <label for="password">Password</label>
  </div>
  <div class="d-grid gap-2 col-6 mx-auto mb-5">
    <button type="Submit" id="signup-button" class="btn btn-primary">
      Sign Up
    </button>
  </div>

  <div class="fs-6 d-grid gap-2 col-6 mx-auto mb-3">
    Already have an account?
  </div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <a href="/signin" class="w-100">
      <button type="button" class="btn btn-outline-primary w-100">
        Click here to sign in
      </button>
    </a>
  </div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="../../static/js/signup.js"></script>
<%- include('../partials/footer'); %>
